<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.una">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- launcher icon designed by Freepik from Flaticon-->
    <application
        android:name=".UnaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_una_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_una_launcher"
        android:supportsRtl="true"
        android:theme="@style/UnaAppTheme">

        <activity android:name=".CharityCreateBroadcastActivity"/>
        <activity android:name=".BroadcastDetailsActivity"></activity>
        <activity android:name=".ChallengeDetailsActivity" />
        <activity android:name=".NavigationDrawerActivities.DonationHistoryActivity" />
        <activity android:name=".ChallengeDonationActivity" />
        <activity android:name=".SurveyActivity" />
        <activity android:name=".CreateChallengeScreenSlideActivity" />
        <activity android:name=".CharityDetailsActivity" />
        <activity android:name=".CharitySearchListActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".CharityHomeActivity" />
        <activity
            android:name=".CharityLoginActivity" />
        <activity
            android:name=".UnaStartupActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_api_key" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>