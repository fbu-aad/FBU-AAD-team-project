<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivFriend"
        android:layout_width="@dimen/notification_item_imageview_with"
        android:layout_height="@dimen/notification_item_imageview_height"
        android:layout_marginStart="@dimen/layout_margin_start"
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:layout_marginBottom="@dimen/layout_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/tvFriendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_start"
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginTop="@dimen/notification_item_top_padding"
        app:layout_constraintStart_toEndOf="@+id/ivFriend"
        app:layout_constraintTop_toTopOf="@+id/ivFriend"
        android:textSize="@dimen/notification_item_textview_font_size"/>

    <TextView
        android:id="@+id/tvWhichCharity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_start"
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:text="@string/notification_item_donated_to"
        app:layout_constraintStart_toEndOf="@+id/tvFriendName"
        app:layout_constraintTop_toTopOf="@+id/tvFriendName"
        android:textSize="@dimen/notification_item_textview_font_size"/>

    <TextView
        android:id="@+id/tvCharityName"
        android:layout_width="@dimen/no_layout_width_textview"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_start"
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginEnd="@dimen/layout_margin_end"
        android:layout_marginRight="@dimen/layout_margin_right"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/notification_item_textview_font_size"
        app:layout_constraintStart_toEndOf="@+id/tvWhichCharity"
        app:layout_constraintTop_toTopOf="@+id/tvFriendName" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_start"
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:text="@string/notification_item_donated_on"
        android:textSize="@dimen/notification_item_textview_font_size"
        app:layout_constraintStart_toEndOf="@+id/ivFriend"
        app:layout_constraintTop_toBottomOf="@+id/tvFriendName" />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="@dimen/no_layout_width_textview"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_start"
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginEnd="@dimen/layout_margin_end"
        android:layout_marginRight="@dimen/layout_margin_right"
        android:textSize="@dimen/notification_item_textview_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTime"
        app:layout_constraintTop_toTopOf="@+id/tvTime" />
</androidx.constraintlayout.widget.ConstraintLayout>