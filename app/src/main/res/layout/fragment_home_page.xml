<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_home_featured"
                android:textSize="30dp"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <include layout="@layout/shimmer_progress_overlay" />
            <include layout="@layout/shimmer_progress_overlay" />
        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_home_explore"
                android:textSize="@dimen/shimmer_textview_font_size"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <include layout="@layout/shimmer_progress_overlay" />
            <include layout="@layout/shimmer_progress_overlay" />
        </LinearLayout>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homeRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/no_layout_width_textview"
        android:layout_marginLeft="@dimen/no_layout_width_textview"
        android:layout_marginTop="@dimen/no_layout_width_textview"
        android:layout_marginEnd="@dimen/no_layout_width_textview"
        android:layout_marginRight="@dimen/no_layout_width_textview"
        android:layout_marginBottom="@dimen/no_layout_width_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/una_paper"/>
</androidx.constraintlayout.widget.ConstraintLayout>